@model IEnumerable<AssetManagementSystem.Models.AssetModel>

<p>
    @Html.ActionLink("Add New", "AddAsset")
</p>
<p>
    @using (Html.BeginForm("SearchAsset", "AssetManagement", FormMethod.Post))
    {
        <b>Search By:</b>
        @Html.RadioButton("searchBy", "Name") <text>Name </text>
        @Html.RadioButton("searchBy", "Year")<text>Year </text> <br />
        @Html.TextBox("Search") <input type="submit" value="Search" />
    }
</p>

<h2>Asset Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td> No matches found </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.ActionLink("Update", "UpdateAsset", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "DeleteAsset", new { id=item.Id })
                </td>
            </tr>
        }
    }
</table>