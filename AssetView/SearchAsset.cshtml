@model List< AssetManagementSystem.Models.Asset>;
@{
    ViewData["Title"] = "SearchAsset";
}
@using (Html.BeginForm("DeleteBook", "AssetManagement", FormMethod.Get))
{
    <b> Search Option: </b>
    @Html.RadioButton("option", "ID")
    <text> ID </text>
    @Html.TextBox("search")
    <button type="submit" class="btn btn-primary"> submit </button>
}

<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Year</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Year</td>
        </tr>
        <td>

            <a href="@Url.Action("DeleteAsset",new { item.Id,item.Name,item.Year})"
            class="btn btn-success">Search</a>
        </td>
    }

</table>